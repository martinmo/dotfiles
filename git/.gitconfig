[user]
	name = Martin Morgenstern
	email = mail@mmorgenstern.net
[alias]
	st = status -sb
	ci = commit
	co = checkout
	br = branch -v
	bra = branch -av
	staged = diff --cached
	ol = log --oneline --decorate
	fixup = "!f() { TARGET=$(git rev-parse \"$1\"); git commit --fixup=$TARGET ${@:2} && EDITOR=true git rebase -i --autostash --autosquash $TARGET^; }; f"
[color]
	ui = true
[push]
	default = simple
[core]
	precomposeunicode = true
	excludesfile = ~/.gitignore_global
[credential]
	helper = osxkeychain
[merge]
	tool = opendiff
