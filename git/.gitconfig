[alias]
	st = status -sb
	ci = commit
	co = checkout
	br = branch -vv
	staged = diff --cached
	ol = log --format=onelineplus
	sl = stash list --stat
[color]
	ui = true
[core]
	quotePath = false
	excludesFile = ~/.gitignore_global
	attributesFile = ~/.gitattributes_global
	pager = delta
[interactive]
	diffFilter = delta --color-only
[delta]
	line-numbers = true
[transfer]
	fsckObjects = true
[fetch]
	fsckObjects = true
	prune = true
[receive]
	fsckObjects = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[hub]
	protocol = ssh
[diff]
	colorMoved = default
	algorithm = histogram
	submodule = log
[pull]
	rebase = false
[pretty]
	onelineplus = %C(yellow)%h%Creset%C(bold red)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%aN>%Creset
[init]
	defaultBranch = main
[merge]
	conflictstyle = zdiff3
[commit]
	verbose = true
[branch]
	sort = -committerdate
[status]
	submodulesummary = true
	showStash = true
[rerere]
	enabled = true
[include]
	path = ~/.local/.gitconfig
